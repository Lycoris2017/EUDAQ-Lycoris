# Start Run Control
xterm -T "Run Control" -e 'euRun' &
sleep 2 

# Start Logger
xterm -T "Log Collector" -e 'euLog -r tcp://localhost' &
sleep 1

# Start TLU Producer
xterm -T "FmctluProducer" -e 'euCliProducer -n FmctluProducer -t fmctlu -r tcp://localhost:44000' & 

# Start one DataCollector
# name (-t) in conf file
# or: -n Ex0TgDataCollector
xterm -T "Data Collector TLU" -e 'euCliCollector -n DirectSaveDataCollector -t tlu_dc -r tcp://localhost:44000' &
